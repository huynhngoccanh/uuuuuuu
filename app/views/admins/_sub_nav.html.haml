%ul{:style => "margin-top: -15px; padding: 0px;"}
  - subnav_actions.each do |action|
    - cls = (action[:action]==active_action && action[:controller]==active_controller) ? 'active' : nil
    %li{:class=>cls, :style => 'padding-left: 9px; padding-right: 9px;'}
      = link_to_unless(active_action==action[:action] && action[:controller]==active_controller, action[:label], {:controller=> action[:controller], :action=>action[:action]}) do
        %span= action[:label]
  - if current_admin.email != 'admin2@ubitru.com'
    %ul.mm_dd_menu
      %li
        Affiliates
        %ul.mm_sub_dd_menu
          %li
            = link_to "Links Management", affiliates_categories_admin_affiliated_advertisers_path
          %li
            = link_to "Add Merchants", admin_custom_advertisers_path
          %li
            = link_to "Affiliate Stores", admin_stores_path
          %li
            = link_to "HP Fav Stores", admin_hp_stores_path(:type => "favorite_stores")
          %li
            = link_to "HP Browseable Stores", admin_hp_stores_path(:type => "browseable")
          %li
            = link_to "HP Top Dealers", admin_hp_stores_path(:type => "top_dealers")
          %li
            = link_to "Popular Stores", admin_hp_store_product_categories_path(:type => "popular_stores")
      %li
        Categories
        %ul.mm_sub_dd_menu
          %li
            = link_to "Product Category", admins_product_categories_path
          %li
            = link_to "Store Category", admins_store_categories_path
          %li
            = link_to "Add Merchant", admin_add_storecat_to_merchant_index_path
          




:css

  ul.mm_dd_menu {
    text-align: left;
    display: inline-block !important;
    margin: 0;
    padding: 0px 0px 0px 0px;
    color: #797979;
    list-style: none;
    -webkit-box-shadow: 0 0 5px rgba(0, 0, 0, 0.15);
    -moz-box-shadow: 0 0 5px rgba(0, 0, 0, 0.15);
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.15);
  }
  ul.mm_dd_menu li {
  font: bold 12px/18px sans-serif;
  display: inline-block;
  margin-right: -4px;
  position: relative;
  padding: 15px 20px;
  /*background: #fff;*/
  cursor: pointer;
  -webkit-transition: all 0.2s;
    -moz-transition: all 0.2s;
    -ms-transition: all 0.2s;
    -o-transition: all 0.2s;
    transition: all 0.2s;
    }
    ul.mm_dd_menu li:hover {
    background: #555;
    /*color: #fff;*/
    }
    ul.mm_dd_menu li ul.mm_sub_dd_menu {
    padding: 0;
    position: absolute;
    top: 30px;
    left: 0;
    width: 150px;
    -webkit-box-shadow: none;
    -moz-box-shadow: none;
    box-shadow: none;
    display: none;
    opacity: 0;
    visibility: hidden;
    -webkit-transiton: opacity 0.2s;
    -moz-transition: opacity 0.2s;
    -ms-transition: opacity 0.2s;
    -o-transition: opacity 0.2s;
    -transition: opacity 0.2s;
    }
    ul.mm_dd_menu li ul.mm_sub_dd_menu li {
      background: #555;
      display: block;
      color: white;
      text-shadow: 0 -1px 0 #000;
      width:100%;
    }

    ul.mm_dd_menu li ul.mm_sub_dd_menu li a{
      color: white !important;
    }

    ul.mm_dd_menu li ul.mm_sub_dd_menu li:hover { background: #666; text-shadow: 0 -1px 0 #797979; color: #797979;}
    ul.mm_dd_menu li ul.mm_sub_dd_menu li a:hover { color: #797979 !important;}
    ul.mm_dd_menu li:hover ul.mm_sub_dd_menu {
      display: block;
      opacity: 1;
      visibility: visible;
    }
